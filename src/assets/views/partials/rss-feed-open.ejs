<div class="window" style="width: 300px">
  <div class="title-bar">
    <div class="title-bar-text">A Window With Stuff In It</div>
    <div class="title-bar-controls">
      <!-- <button aria-label="Minimize"></button>
      <button aria-label="Maximize"></button> -->
      <button aria-label="Close" onclick="javascript:CAST()"></button>
    </div>
  </div>
  <div class="window-body">
    <form action="/feed" id="rss-form">
        <input type="url" name="url" id="inp_url" placeholder="RSS feed url..." required>
        <input type="submit">
    </form>
    <a href="/feed?url=https%3A%2F%2Fysws.hackclub.com%2Ffeed.xml">Or try a demo</a>
  </div>
</div>

<script>
  function sleep(ms) {
    return new Promise(resolve => setTimeout(resolve, ms));
  }
  async function loop(){
    document.querySelector(".window-body").innerHTML = "<h3>Shutting down.</h3>"
    await sleep(100)
    document.querySelector(".window-body").innerHTML = "<h3>Shutting down..</h3>"
    await sleep(100)
    document.querySelector(".window-body").innerHTML = "<h3>Shutting down...</h3>"
    await sleep(100)
  }
  async function CAST(){
    await loop();
    await loop();
    await loop();
    document.querySelector("body").innerHTML = ""
    await sleep(750);
    document.querySelector("body").style.background = "black"
  }
</script>